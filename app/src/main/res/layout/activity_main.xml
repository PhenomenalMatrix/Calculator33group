<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    >

    <FrameLayout
        android:id="@+id/container_for_tv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:id="@+id/calc_title_tv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:hint="0"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="80sp"
            android:gravity="end"
            android:paddingHorizontal="10dp"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/container_for_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/clear_btn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style"
                android:text="AC"
                android:textSize="30sp"
                android:backgroundTint="@color/gray"
                android:onClick="onActionClick"
                />
            <Button
                android:id="@+id/skobki_btn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style"
                android:text="()"
                android:textSize="30sp"
                android:backgroundTint="@color/gray"
                />
            <Button
                android:id="@+id/protsent_btn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style"
                android:text="%"
                android:textSize="30sp"
                android:backgroundTint="@color/gray"
                />
            <Button
                android:id="@+id/delenie_btn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style"
                android:textSize="30sp"
                android:backgroundTint="@color/orange"
                android:text="/"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/seven_btn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:backgroundTint="@color/smokie_black"
                android:onClick="onNumberClick"
                />
            <Button
                android:id="@+id/eight_btn"
                android:text="8"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:backgroundTint="@color/smokie_black"
                android:onClick="onNumberClick"
                />
            <Button
                android:id="@+id/nine_btn"
                android:text="9"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:backgroundTint="@color/smokie_black"
                android:onClick="onNumberClick"
                />
            <Button
                android:id="@+id/umnoj_btn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style"
                android:textSize="30sp"
                android:text="X"
                android:backgroundTint="@color/orange"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/four_btn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style"
                android:backgroundTint="@color/smokie_black"
                android:textSize="30sp"
                android:text="4"
                android:textColor="@color/white"
                android:onClick="onNumberClick"
                />
            <Button
                android:id="@+id/five_btn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style"
                android:backgroundTint="@color/smokie_black"
                android:textSize="30sp"
                android:text="5"
                android:textColor="@color/white"
                android:onClick="onNumberClick"
                />
            <Button
                android:id="@+id/six_btn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style"
                android:backgroundTint="@color/smokie_black"
                android:textSize="30sp"
                android:text="6"
                android:textColor="@color/white"
                android:onClick="onNumberClick"
                />
            <Button
                android:id="@+id/minus_btn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style"
                android:textSize="30sp"
                android:text="â€“"
                android:backgroundTint="@color/orange"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/one_btn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style"
                android:backgroundTint="@color/smokie_black"
                android:textSize="30sp"
                android:text="1"
                android:textColor="@color/white"
                android:onClick="onNumberClick"
                />
            <Button
                android:id="@+id/two_btn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style"
                android:backgroundTint="@color/smokie_black"
                android:textSize="30sp"
                android:text="2"
                android:textColor="@color/white"
                android:onClick="onNumberClick"
                />
            <Button
                android:id="@+id/three_btn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style"
                android:backgroundTint="@color/smokie_black"
                android:textSize="30sp"
                android:text="3"
                android:textColor="@color/white"
                android:onClick="onNumberClick"
                />
            <Button
                android:id="@+id/plus_btn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style"
                android:textSize="30sp"
                android:text="+"
                android:backgroundTint="@color/orange"
                android:onClick="onActionClick"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/zero_btn"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style"
                android:backgroundTint="@color/smokie_black"
                android:textColor="@color/white"
                android:text="0"
                android:textSize="30sp"
                android:gravity="start|center_vertical"
                android:paddingHorizontal="33dp"
                android:onClick="onNumberClick"
                />
            <Button
                android:id="@+id/dot_btn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style"
                android:backgroundTint="@color/smokie_black"
                android:text=","
                android:textSize="30sp"
                android:textColor="@color/white"
                android:onClick="onNumberClick"
                />
            <Button
                android:id="@+id/equal_btn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style"
                android:backgroundTint="@color/orange"
                android:text="="
                android:textSize="30sp"
                android:onClick="onActionClick"
                />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>